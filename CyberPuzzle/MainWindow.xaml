<Window x:Class="CyberPuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:CyberPuzzle"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CyberPuzzle.ViewModel"
        xmlns:uc="clr-namespace:CyberPuzzle.UserControls"
        Title="Cyberpuzzle 2077"
        Width="960"
        Height="540"
        Background="{StaticResource BackgroundDarkBrush}"
        FontFamily="Consolas"
        ResizeMode="CanMinimize"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <uc:CodeMatrix Margin="10" DataContext="{Binding CodeMatrixVM}" />

        <StackPanel Grid.Column="1">
            <uc:BufferPanel DataContext="{Binding BufferPanelVM}" />
        </StackPanel>
    </Grid>
</Window>
