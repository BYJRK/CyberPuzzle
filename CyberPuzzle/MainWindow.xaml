<Window x:Class="CyberPuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CyberPuzzle"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CyberPuzzle.ViewModel"
        Title="Cyberpuzzle 2077"
        Width="800"
        Height="450"
        Background="{StaticResource BackgroundDarkBrush}"
        FontFamily="Consolas"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                Margin="10"
                Padding="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Gray">
            <ItemsControl ItemsSource="{Binding Puzzle}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding RelativeSource={RelativeSource Self}, Path=Rows}" Rows="{Binding PuzzleSize}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                Height="60"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.PieceClickCommand}"
                                CommandParameter="{Binding}"
                                IsEnabled="{Binding IsEnabled, Mode=OneWay}"
                                Style="{StaticResource WordButton}">
                            <TextBlock Text="{Binding DisplayWord}" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <ItemsControl Grid.Column="1" Margin="0,10,10,10" ItemsSource="{Binding SelectedWords}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Background="{StaticResource BackgroundDarkBrush}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="15"
                               FontSize="26"
                               Foreground="{StaticResource ForegroundWhiteBrush}"
                               Text="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
